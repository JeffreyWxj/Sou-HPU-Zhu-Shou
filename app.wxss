@import "static/wxss/weui.wxss";
/**app.wxss**/
page {
	background-color: #f8f8f8;
	font-size: 16px;
	font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
	padding: 15px 20px;
}

.page__bd {
	padding-bottom: 40px;
}

.page__bd_spacing {
	padding-left: 15px;
	padding-right: 15px;
}

.page__ft {
	padding-bottom: 10px;
	text-align: center;
}

.page__title {
	text-align: left;
	font-size: 20px;
	font-weight: 400;
}

.page__desc {
	margin-top: 5px;
	color: #888888;
	text-align: left;
	font-size: 14px;
}

/*Jeffrey*/
.circle-border {
	border-radius: 8%/50%;
}

.bg-main {
	background-color: #ffac34;
	
}

.color-main {
	color: #ffac34;
}

.btn-primary {
	border-radius: 7%/50%;
	background-color: #ffac34;
	color: #ffffff;
}

.pd-5 {
	padding: 5px;
}

.pd-10 {
	padding: 10px;
}

.pd-15 {
	padding: 15px;
}

.center {
	text-align: center;
}

.mgt-5 {
	margin-top: 5px;
}

.mgt-10 {
	margin-top: 10px;
}

.mgt-15 {
	margin-top: 15px;
}

.mgt-20 {
	margin-top: 20px;
}

.table {
	width: 100%;
}

.table th, .table td {
	border: 1px solid #999999;
}